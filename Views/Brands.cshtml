<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <title>Shoe Stores and Brands Website</title>
  </head>
  <body>
    <div class="container">
      <h1>Brands</h1>
      <hr />
      <h2>Add a brand for a store</h2>
      <form action="/Brands" method="post">
        <label>Brand Name: </label>
        <input type="text" name="brand-name">
        <label>For Store: </label>
        <select name="store-name" type="text">
          @if (Model["storeList"].Count > 0 )
          {
            @foreach (var store in @Model["storeList"])
            {
              <option value="@store.GetId()">@store.GetName()</option>
            }
          }
        </select>
        <button type="submit">ADD</button>
      </form>
      <hr />
      <h2>Brand List</h2>
        @if(Model != null)
        {
          <ul>
            @foreach(var brand in Model["brandList"])
            {
              <li><a href="/Brands/@brand.GetId()">@brand.GetName()</a></li>
              @if(brand.GetStores() != null)
              {
                <ul>
                  @foreach(var store in brand.GetStores())
                  {
                    <li>
                      @store.GetName()
                    </li>
                  }
                </ul>
              }
            }
          </ul>
        }
      <h3><a href="/">Back</a></h3>
    </div>
  </body>
</html>
